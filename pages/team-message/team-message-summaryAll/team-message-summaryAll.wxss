.team-message-summaryAll {
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, .6);
    position: absolute;
    z-index: 100;
    top: 0;
}

.team-message-summaryAll-content {
    width: 80%;
    margin: 100rpx auto 0;
    position: relative;
    background: #fff;
    border-radius: 4px;
    font-size: 16px;
    text-indent: 2em;
    padding: 10%;
    border: 3px solid #eaeaea;
    box-shadow: 0 2px 6px #e6e6e6;
    box-sizing: border-box;
}
.team-message-summaryAll-close{
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}